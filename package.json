{
  "name": "@modelcontextprotocol/proxy-wrapper",
  "version": "1.0.0",
  "description": "Lightweight proxy wrapper for Model Context Protocol (MCP) servers that provides a hook system for intercepting and modifying tool calls",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "example": "ts-node-esm src/example-proxy-wrapper-usage.ts",
    "test": "jest",
    "test:integration": "jest --config=jest.integration.config.js",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish": "npm publish --access public",
    "docs": "typedoc --options typedoc.json",
    "docs:serve": "cd docs && jekyll serve"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "proxy",
    "llm",
    "ai",
    "hooks"
  ],
  "author": "Dennison Bertram and Anthropic Claude 3.7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crazyrabbitltc/mcp-proxy-wrapper"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.0",
    "colors": "^1.4.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.9",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.6.0"
  }
}
